#-*-mode: Shell-script; coding: utf-8;-*-
# tmux helpers.

# Only define if we have tmux installed.
tmux=$(which tmux > /dev/null 2>&1)
if [[ $? == 0 ]]; then
  # Attach exclusively to a tmux session, or create it it doesn't exist
  function T {
    if [[ -z "$1" ]]; then
      echo "Supply a tmux session name to connect to/create"
    else
      tmux ls | awk -F: '{print $1}' | grep foo > /dev/null 2>&1
      if [[ $? != 0  ]]; then
        tmux new-session -d -s $1
      fi
      tmux attach-session -d -t $1
    fi
  }
  alias tls='tmux ls'
fi
